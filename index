    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getDatabase, ref, onValue } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js";
        import { getAuth, onAuthStateChanged, signInAnonymously } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

        // IMPORTANT: Copy the Web API Key from Firebase Console > Project Settings
        // REPLACE 'PASTE_YOUR_API_KEY_HERE' with your real key.
        const firebaseConfig = {
            apiKey: "PASTE_YOUR_API_KEY_HERE", 
            authDomain: "fffas-7c02b.firebaseapp.com",
            projectId: "fffas-7c02b",
            storageBucket: "fffas-7c02b.firebasestorage.app",
            messagingSenderId: "367175519183",
            appId: "1:367175519183:web:531207e408ec210087796a",
            databaseURL: "https://fffas-7c02b-default-rtdb.firebaseio.com/"
        };

        const app = initializeApp(firebaseConfig);
        const db = getDatabase(app);
        const auth = getAuth(app);

        onAuthStateChanged(auth, async (user) => {
            const status = document.getElementById('db-status');
            if (!user) {
                try {
                    // Prevent sign-in if apiKey is placeholder
                    if (firebaseConfig.apiKey === "PASTE_YOUR_API_KEY_HERE") {
                        status.innerText = "API Key Missing";
                        status.className = "text-[10px] bg-yellow-100 px-2 py-1 rounded-full uppercase font-bold text-yellow-700";
                        return;
                    }
                    await signInAnonymously(auth);
                } catch (e) {
                    console.error("Authentication Error:", e);
                    status.innerText = "Auth Error";
                    status.className = "text-[10px] bg-red-100 px-2 py-1 rounded-full uppercase font-bold text-red-600";
                }
            } else {
                status.innerText = "සම්බන්ධයි (Connected)";
                status.className = "text-[10px] bg-green-100 px-2 py-1 rounded-full uppercase font-bold text-green-600";
                loadData();
            }
        });

        function loadData() {
            const classRef = ref(db, "classes");
            onValue(classRef, (snapshot) => {
                const list = document.getElementById('class-list');
                const data = snapshot.val();
                list.innerHTML = "";

                if (!data) {
                    list.innerHTML = `
                        <div class="p-8 glass-morphism text-center border-2 border-dashed border-slate-200">
                            <p class="text-slate-400">දත්ත ගබඩාවේ තවමත් පන්ති තොරතුරු නොමැත. <br><span class="text-[10px]">Realtime Database එකේ 'classes' node එක සාදා දත්ත ඇතුළත් කරන්න.</span></p>
                        </div>
                    `;
                    return;
                }

                Object.keys(data).forEach(key => {
                    const item = data[key];
                    list.innerHTML += `
                        <div class="glass-morphism p-6 flex justify-between items-center card-hover border-l-4 border-blue-500">
                            <div>
                                <h4 class="font-bold text-slate-800">${item.title || 'සජීවී පන්තිය'}</h4>
                                <p class="text-xs text-slate-500"><i class="fa-regular fa-clock mr-1"></i> ${item.time || 'අද'}</p>
                            </div>
                            <a href="${item.link || '#'}" target="_blank" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-xs font-bold shadow-lg shadow-blue-200">සම්බන්ධ වන්න</a>
                        </div>
                    `;
                });
            }, (error) => {
                console.error("Database Error:", error);
                document.getElementById('db-status').innerText = "DB Error";
            });
        }
    </script>
